{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "V6PP - build and debug kernel",
            "type": "cppdbg",
            "request": "launch",

            //"program": "${workspaceFolder}/target/objs/kernel.exe",
            "program": "${workspaceFolder}/target/objs/apps-elf/ls",
            //"program": "${workspaceFolder}/target/objs/Shell.exe",
            //                           check this   ^^^^^^^^^^^
            
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerServerAddress": "${workspaceFolder}/target/qemu-gdb.sock",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "nasm - debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": ""
        }
    ]
}